{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/components/*"],
      "@layouts*": ["src/layouts/*"],
      "@pages*": ["src/pages/*"],
    },
    "types": ["astro/client", "node"]
  },
  "typescript.inlayHints.parameterNames.enabled": "all"
}

